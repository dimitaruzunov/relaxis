<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_heart_rate"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:hint="@string/heartRate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/divider1"
            style="@style/Divider"
            android:layout_below="@+id/heartRateTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/instantSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:hint="@string/instantSpeed"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/divider2"
            style="@style/Divider"
            android:layout_below="@+id/instantSpeedTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/rRIntervalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:drawableLeft="@drawable/ic_rr_interval"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:hint="@string/rRInterval"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/divider3"
            style="@style/Divider"
            android:layout_below="@+id/rRIntervalTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/instantHeartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:drawableLeft="@drawable/ic_instant_heart_rate"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:hint="@string/instantHeartRate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:id="@+id/divider4"
            style="@style/Divider"
            android:layout_below="@+id/instantHeartRateTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
    </RelativeLayout>

</ScrollView>
