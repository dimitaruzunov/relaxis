<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        
        <Button
            android:id="@+id/connectButton"
            android:layout_centerHorizontal="true"
            style="@style/ConnectButton" />

        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_below="@+id/connectButton"
            android:drawableLeft="@drawable/ic_heart_rate"
            android:hint="@string/heartRate"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider1"
            android:layout_below="@+id/heartRateTextView"
            style="@style/Divider" />

        <TextView
            android:id="@+id/rRIntervalTextView"
            android:layout_below="@+id/divider1"
            android:drawableLeft="@drawable/ic_rr_interval"
            android:hint="@string/rRInterval"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider2"
            android:layout_below="@+id/rRIntervalTextView"
            style="@style/Divider" />

        <TextView
            android:id="@+id/instantHeartRateTextView"
            android:layout_below="@+id/divider2"
            android:drawableLeft="@drawable/ic_instant_heart_rate"
            android:hint="@string/instantHeartRate"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider3"
            android:layout_below="@+id/instantHeartRateTextView"
            style="@style/Divider" />
        
        <TextView
            android:id="@+id/instantSpeedTextView"
            android:layout_below="@+id/divider3"
            android:hint="@string/instantSpeed"
            style="@style/HomeTextView" />

        <View
            android:id="@+id/divider4"
            android:layout_below="@+id/instantSpeedTextView"
            style="@style/Divider" />

        <TextView
            android:id="@+id/testTextView"
            android:layout_below="@+id/divider4"
            android:drawableLeft="@drawable/ic_instant_heart_rate"
            android:hint="@string/instantHeartRate"
            style="@style/HomeTextView" />

		<com.facebook.widget.LoginButton
		    android:id="@+id/authButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/testTextView"
		    android:layout_marginTop="30dp" />
		
    </RelativeLayout>

</ScrollView>
