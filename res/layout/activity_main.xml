<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/heartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_heart_rate"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:hint="@string/heartRate"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            style="@style/Divider"
            android:id="@+id/divider1"
            android:layout_below="@+id/heartRateTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/instantSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:hint="@string/instantSpeed"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            style="@style/Divider"
            android:id="@+id/divider2"
            android:layout_below="@+id/instantSpeedTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/rRIntervalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_rr_interval"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/divider2"
            android:hint="@string/rRInterval"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            style="@style/Divider"
            android:id="@+id/divider3"
            android:layout_below="@+id/rRIntervalTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/instantHeartRateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_instant_heart_rate"
            android:drawablePadding="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/divider3"
            android:hint="@string/instantHeartRate"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <View
            style="@style/Divider"
            android:id="@+id/divider4"
            android:layout_below="@+id/instantHeartRateTextView"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/app1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider4"
            android:text="App1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App2"
            android:id="@+id/app2Button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App3"
            android:id="@+id/app3Button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</ScrollView>
